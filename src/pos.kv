#:kivy 1.0

<Controller>:
	a_articles: gd_articles
	a_buylist: bl_buylist
	a_baroptions: bl_btoptions
	label_tprice: lb_total_price

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			size_hint_y: 0.8


			BoxLayout:

				GridLayout:
					id: gd_articles
					size_hint_x: 0.7
					cols: 3
					rows: 3


				BoxLayout:
					id: bl_buylist
					size_hint_x: 0.3
					orientation: 'vertical'


		BoxLayout:
			size_hint_y: 0.2

			BoxLayout:
				id: bl_btoptions
				size_hint_x: 0.7

			BoxLayout:
				size_hint_x: 0.3
				Label:
					id: lb_total_price
					text: 'TOTAL'
